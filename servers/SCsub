Import('env')

env.servers_sources=[]
env.add_source_files(env.servers_sources,"*.cpp")

Export('env')

SConscript('visual/SCsub');
SConscript('audio/SCsub');
SConscript('spatial_sound/SCsub');
SConscript('spatial_sound_2d/SCsub');

lib = env.Library("servers",env.servers_sources)

if env['dummy_3d_physics'] == 'yes':
    env.add_source_files(env.servers_sources, "dummy_physics/dummy_physics_3d.cpp")
if env['dummy_2d_physics'] == 'yes':
    env.add_source_files(env.servers_sources, "dummy_physics/dummy_physics_2d.cpp")

env.Prepend(LIBS=[lib])


